@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">
                <i class="bi bi-info-circle"></i> About Car Rental System
            </h1>
            <p class="lead text-muted">Your trusted partner in car rental services</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-6">
            <h2 class="h3 mb-4">Our Story</h2>
            <p class="lead">
                Car Rental System was founded with a simple mission: to provide reliable, 
                affordable, and convenient car rental services to customers worldwide.
            </p>
            <p>
                Since our establishment, we have been committed to offering the highest quality 
                vehicles and exceptional customer service. Our modern fleet includes a wide 
                variety of cars to suit every need and budget.
            </p>
            <p>
                We believe that everyone deserves access to reliable transportation, and we're 
                proud to be part of your journey, whether it's for business, leisure, or 
                special occasions.
            </p>
        </div>
        <div class="col-lg-6">
            <div class="card bg-primary text-white">
                <div class="card-body p-4">
                    <h4 class="card-title">
                        <i class="bi bi-award"></i> Our Values
                    </h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Reliability:</strong> Always on time, every time
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Quality:</strong> Well-maintained, modern vehicles
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Customer Service:</strong> 24/7 support for all customers
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Transparency:</strong> Clear pricing with no hidden fees
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Innovation:</strong> Modern technology for easy booking
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="h3 mb-4 text-center">Our Services</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-car-front text-primary display-4 mb-3"></i>
                    <h5 class="card-title">Car Rental</h5>
                    <p class="card-text text-muted">
                        Choose from our extensive fleet of vehicles for short-term or long-term rentals.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-check text-success display-4 mb-3"></i>
                    <h5 class="card-title">Easy Booking</h5>
                    <p class="card-text text-muted">
                        Simple online booking system with instant confirmation and flexible scheduling.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-headset text-warning display-4 mb-3"></i>
                    <h5 class="card-title">24/7 Support</h5>
                    <p class="card-text text-muted">
                        Round-the-clock customer support to assist you with any questions or concerns.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body p-4 text-center">
                    <h3 class="mb-3">Ready to Experience Our Service?</h3>
                    <p class="lead mb-4">Join thousands of satisfied customers and start your journey with us today.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> Get Started
                        </a>
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-envelope"></i> Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>