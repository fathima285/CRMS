@model CarRentalSystem.Models.Car
@{
    ViewData["Title"] = "Edit Car";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">
                    <i class="bi bi-pencil"></i> Edit Car
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="EditCar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="CarID" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CarName" class="form-label">
                                    <i class="bi bi-car-front"></i> Car Name
                                </label>
                                <input asp-for="CarName" class="form-control" placeholder="e.g., Honda Civic" />
                                <span asp-validation-for="CarName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CarModel" class="form-label">
                                    <i class="bi bi-tag"></i> Car Model
                                </label>
                                <input asp-for="CarModel" class="form-control" placeholder="e.g., 2024" />
                                <span asp-validation-for="CarModel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">
                            <i class="bi bi-image"></i> Image URL
                        </label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/car-image.jpg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <div class="form-text">Optional: URL to the car's image</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAvailable" class="form-check-label">
                                Car is available for rental
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Cars" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Cars
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Update Car
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}