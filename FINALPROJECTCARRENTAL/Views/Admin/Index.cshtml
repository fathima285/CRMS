@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4 text-primary">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h1>
        <p class="lead">Welcome to the Car Rental System Admin Panel</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">
                            <i class="bi bi-car-front"></i> Manage Cars
                        </h4>
                        <p class="card-text">Add, edit, and manage the car inventory</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-car-front display-4"></i>
                    </div>
                </div>
                <a asp-action="Cars" class="btn btn-light">
                    <i class="bi bi-arrow-right"></i> Manage Cars
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">
                            <i class="bi bi-calendar-check"></i> View Bookings
                        </h4>
                        <p class="card-text">View and manage all customer bookings</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-calendar-check display-4"></i>
                    </div>
                </div>
                <a asp-action="Bookings" class="btn btn-light">
                    <i class="bi bi-arrow-right"></i> View Bookings
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a asp-action="AddCar" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-plus-circle"></i> Add New Car
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Cars" class="btn btn-outline-info w-100 mb-2">
                            <i class="bi bi-list-ul"></i> View All Cars
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Bookings" class="btn btn-outline-success w-100 mb-2">
                            <i class="bi bi-calendar3"></i> View All Bookings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>